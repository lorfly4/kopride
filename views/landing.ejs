<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <style>
      /* Menghapus margin dan padding default */
      body,
      html {
        margin: 0;
        padding: 0;
        height: 100%;
        width: 100%;
      }

      /* Membuat navbar lebih kompak */
      .navbar {
        margin-bottom: 0;
      }

      .dropdown-menu {
        min-width: 200px;
        position: absolute;
        right: 0;
        z-index: 1050;
      }

      .profile-photo {
        width: 50px;
        height: 50px;
        border-radius: 50%;
      }

      /* Memastikan elemen konten berada di dalam tampilan tanpa scroll */
      .container {
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        text-align: center;
      }

      .content {
        flex-grow: 1; /* Membuat konten mengambil ruang yang tersisa */
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
      }
    </style>
    <title>KO-PRIDE</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">KO-PRIDE</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNavAltMarkup"
          aria-controls="navbarNavAltMarkup"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link active" aria-current="page" href="/landing"
              >Home</a
            >
            <a class="nav-link" href="/profil">Profil</a>
            <a class="nav-link" href="/peminjaman">Peminjaman</a>
          </div>
          <div class="ms-auto position-relative">
            <div class="dropdown">
              <button
                class="btn btn-secondary dropdown-toggle"
                type="button"
                id="accountDropdown"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                <span><%= users.nama ? users.nama : 'Guest' %></span>
              </button>
              <div class="dropdown-menu" aria-labelledby="accountDropdown">
                <div class="dropdown-item d-flex align-items-center">
                  <img
                    class="profile-photo me-2"
                    src="<%= users.foto ? users.foto : '/img/avatar.png' %>"
                    alt="Avatar"
                  />
                  <span><%= users.nama ? users.nama : 'Guest' %></span>
                </div>
                <a class="dropdown-item" href="/profil">Profil</a>
                <a class="dropdown-item" href="/logout">Logout</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <!-- Konten Utama -->
    <div class="container">
      <div class="content">
        <div>
          <h1>Selamat Datang Di KO-PRIDE</h1>
          <p>
            This is a simple landing page with an offcanvas menu and submenu
            using Bootstrap 5.
          </p>
        </div>
      </div>
    </div>

    <!-- Script Bootstrap JS dan Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
      integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
      crossorigin="anonymous"
    >
      jQuery=829
    </script>
    <script>
      // Periksa URL untuk parameter success
      const urlParams = new URLSearchParams(window.location.search);
      if (urlParams.get("success") === "true") {
        alert("Data berhasil disimpan!");
      }
    </script>
    <!DOCTYPE html>
    <html lang="en">
      <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Landing Page</title>
      </head>
      <body>
        <!-- Konten halaman -->

        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
          <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11">
        </script>
        <script>
          // Tes variabel
          <% if (message) { %>
            console.log("Message loaded:", "<%= message %>");
            Swal.fire({
              icon: 'warning',
              title: 'Perhatian!',
              text: "<%= message %>",
              confirmButtonText: 'OK',
            });
          <% } else { %>
            console.log("No message available.");
          <% } %>
        </script>
      </body>
    </html>
  </body>
</html>
